<li class="<%=  self_or_other(message) %>">
  <div class="avatar">
  	<% if self_or_other(message) == "other"  %>
    	<%= image_tag @reciever.image.url(:thumb) %>
    <% else %>
    	<%= image_tag current_user.image.url(:thumb) %>
    <% end %>
  </div>
  <div class="chatboxmessagecontent">
    <p><%= message.body %></p>
    <time datetime="<%= message.created_at %>" title="<%= message.created_at.strftime("%d %b  %Y at %I:%M%p") %>">
      <b><%= message_interlocutor(message).name %> â€¢ <%= message.created_at.strftime("%H:%M %p") %></b>
    </time>
  </div>
</li>