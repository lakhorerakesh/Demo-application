<div class="container" id="container1">
  <div class="row centered-form">
    <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title text-center">Please Register</h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
           <%= devise_error_messages! %>
            <div class="form-group">
              <%= f.text_field :name, class: "form-control input-sm", placeholder: "Full Name" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, class: "form-control input-sm", placeholder: "Email Address" %>
            </div>

            <div class="form-group">
              <%= f.file_field :image, class: "form-control input-sm", placeholder: "Profile Image" %>
            </div>

            <div class="row">
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.password_field :password, class: "form-control input-sm", placeholder: "Password" %>
                </div>
              </div>
              <div class="col-xs-6 col-sm-6 col-md-6">
                <div class="form-group">
                  <%= f.password_field :password_confirmation, class: "form-control input-sm", placeholder: "Confirm Password" %>
                </div>
              </div>
            </div>
            <%= f.submit "Sign up", class: "btn btn-info btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
#container1 {
    background-color: #e2dada;
}

.centered-form {
    margin-top: 120px;
    margin-bottom: 120px;
}

.centered-form .panel {
    background: rgba(255, 255, 255, 0.8);
    box-shadow: rgba(0, 0, 0, 0.3) 20px 20px 20px;
}
</style>

