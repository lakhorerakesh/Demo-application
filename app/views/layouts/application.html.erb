<!DOCTYPE html>
<html>
	<head>
	  <title>Demo Application</title>
	  <meta charset="utf-8">
	  <meta http-equiv="X-UA-Compatible" content="IE=edge">
	  <meta name="viewport" content="width=device-width, initial-scale=1">
	  <meta name="description" content="">
	  <meta name="author" content="">
	  <meta content='<%= user_signed_in? ? current_user.id : "" %>' name='user-id'/>
	  <script src="https://www.google.com/jsapi"></script>
  	<script src="https://www.youtube.com/iframe_api"></script>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css' %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<nav class="navbar navbar-inverse">
		  <div class="container-fluid">
		    <div class="navbar-header">
		      <a class="navbar-brand" href="#"></a>
		    </div>
		    <ul class="nav navbar-nav">
		      <li class="active"><a href="<%= root_path %>">Home</a></li>
		      <li><a href="<%= products_path %>">Manage Product</a></li>
		      <li><a href="<%= shoppe_products_path %>">Shoppe</a></li>
		      <li><a href="<%= root_path %>">Chat</a></li>
		      <li><a href="<%= videos_path%>">Videos</a></li>  
		    </ul>
		    <ul class="nav navbar-nav navbar-right">
			    <% if !user_signed_in? %>
			      <li><a href="<%= new_user_registration_path%>"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
			      <li><a href="<%= new_user_session_path  %>"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
		      <% else %>
		      <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Hi, <%= current_user.name  %><span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete%></li>
              <li><%= link_to "Edit Profile", edit_user_registration_path %></li>
            </ul>
          </li>
		      <% end %>
		    </ul>
		  </div>
		</nav>
		<% flash.each do |key, value| %>
	    <div class="text-center <%= flash_class(key) %>">
	      <%= value %>
	    </div>
		<% end %>
		<%= yield %>
		<!-- <audio id="chatAudio"><source src="/sounds/notification.mp3" type="audio/mpeg"></audio> -->
	</body>
</html>
