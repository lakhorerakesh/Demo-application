<div class="container">
  <h1>New video</h1>
  <%= form_for @video do |m| %>
    <%= render 'shared/errors', object: @video %>
    <div class="form-group">
      <%= m.label :title %>
      <%= m.text_field :title, placeholder: 'Title', class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= m.label :author %>
      <%= m.text_field :author, placeholder: 'Author', class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= m.label "Video" %>
      <%= m.file_field :clip , class: 'form-control', required: true%>
    </div>
    <div class="form-group">
      <%= button_tag "Upload!", class: "btn btn-success", 'data-disable-with' => "<i class='fa fa-spinner fa-spin'></i> Uploading...".html_safe %>
    </div>
  <% end %>
</div>