<div class="jumbotron">
  <div class="container">
    <h1>Share your videos</h1>
    <p>
      <%= link_to 'Add video!', new_video_path, class: 'btn btn-primary btn-lg' %>
    </p>
  </div>
</div>

<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for videos_path, method: :get, :class =>"navbar-form", :role=>"search" do |f| %>
      <div class="input-group add-on">
        <%= text_field_tag :q, params[:q], :class => "form-control",:placeholder => "Search videos" %>
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if @videos.any? %>
  <div class="container">
    <h1>Latest videos</h1>
    <% @videos.in_groups_of(3) do |group| %>
      <div class="row">
        <% group.each do |video| %>
          <% if video %>
            <div class="col-md-4">
              <div class="flex-video widescreen">
                <iframe src="<%= video.embed_link %>" frameborder="0" allowfullscreen="">
                </iframe>
              </div>
              <div class="caption">
                <%= link_to "Download", download_video_path(video: video), :class=>"glyphicon glyphicon-cloud-download btn btn-default"  %>
                <h5><%= video.title %></h5>
                <p>Author: <b><%= video.author %></b></p>
                <p>Duration: <b><%= video.duration %></b></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>